<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="./stylesheet/shopcart.css">
    <title>Main page</title>
</head>
<body>
<button class="shop-cart" onclick="location.href='http://localhost:5000/gallery'">Go back</button>
<section class="images">
    {{#each list}}
        <div class="image-block">
            <img src="{{this.primaryImageSmall}}" alt="{{this.title}}">
            <div class="text-block">
                <p><b>Title:</b> {{this.title}}</p>
            </div>
            <div class="button-block">
                <button onclick="window.open('{{this.objectURL}}')">Go to the websiter of painting</button>
            </div>
        </div>
    {{/each}}
</section>
</body>
</html>