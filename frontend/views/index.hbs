<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="./stylesheet/paintings.css">
    <title>Main page</title>
</head>
<body>
<button class="shop-cart" onclick="location.href='http://localhost:5000/shopcart'">Shop cart</button>
<section class="images">
    {{#each list}}
        <div class="image-block">
            <img src="{{this.primaryImageSmall}}" alt="{{this.title}}">
            <div class="text-block">
                <p><b>Title:</b> {{this.title}}</p>
            </div>
            <div class="button-block">
                <form id="form-id-{{this.objectID}}" action="/buy_painting" method="post">
                    <input type="hidden" name="objectID" value="{{this.objectID}}">
                    <button type="submit">Buy</button>
                </form>
            </div>
        </div>
    {{/each}}
</section>
</body>
</html>